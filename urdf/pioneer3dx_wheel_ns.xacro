<?xml version="1.0"?>

<robot xmlns:xacro="http://ros.org/wiki/xacro">
<xacro:property name="ns" value="$(arg ns)/" />
  <!--<xacro:include filename="$(find p2os_urdf)/defs/materials.xacro"/>-->

  <!-- Properties (Constants) -->
  <xacro:property name="M_PI" value="3.1415927"/>

  <!-- Right/Left Hubcap + Wheel -->
  <xacro:macro name="p3dx_wheel" params="suffix parent reflect">
    <!-- wheel -->
    <link name="${ns}p3dx_${suffix}_wheel">
      <inertial>
        <mass value="0.5"/> 
        <origin xyz="0 0 0"/>
        <inertia ixx="0.012411765597" ixy="0" ixz="0"
                 iyy="0.015218160428" iyz="0" izz="0.011763977943"/>
      </inertial>
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry name="pioneer_geom">
          <mesh filename="package://p2os_urdf/meshes/p3dx_meshes/${suffix}_wheel.stl"/>
        </geometry>
        <material name="WheelBlack">
          <color rgba="0.117 0.117 0.117 1"/>
        </material>
      </visual>
      <collision>
        <origin xyz="0 0 0" rpy="${-3.1415927/2} 0 0"/>
        <geometry>
          <cylinder radius="0.09" length="0.04"/>
        </geometry>
      </collision>
    </link>
    <gazebo reference="${ns}p3dx_${suffix}_wheel">
      <material value="Gazebo/Black"/>
      <mu1>0.5</mu1>
      <mu2>50.0</mu2>
      <kp>100000000.0</kp>
      <kd>1.0</kd>
    </gazebo>

    <!-- hubcap -->
    <link name="${ns}p3dx_${suffix}_hubcap">
      <inertial>
        <mass value="1.0"/>
        <origin xyz="0 0 0"/>
        <inertia ixx="0.012411765597" ixy="0" ixz="0"
                 iyy="0.015218160428" iyz="0" izz="0.011763977943"/>
      </inertial>
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry name="pioneer_geom">
          <mesh filename="package://p2os_urdf/meshes/p3dx_meshes/${suffix}_hubcap.stl"/>
        </geometry>
        <material name="HubcapYellow">
          <color rgba="1.0 0.811 0.151 1.0"/>
        </material>
      </visual>
    </link>
    <gazebo reference="${ns}p3dx_${suffix}_hubcap">
      <material value="Gazebo/Yellow"/>
    </gazebo>

    <joint name="${ns}base_${suffix}_hubcap_joint" type="fixed">
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <parent link="${ns}p3dx_${suffix}_wheel"/>
      <child link="${ns}p3dx_${suffix}_hubcap"/>
    </joint>

    <joint name="${ns}base_${suffix}_wheel_joint" type="continuous">
      <axis xyz="0 1 0"/>
      <anchor xyz="0 0 0"/>
      <limit effort="100" velocity="100" />
      <joint_properties damping="0.0" friction="0.0" />
      <origin xyz="0 ${reflect*0.158} 0.091" rpy="0 0 0"/>
      <parent link="${ns}base_link"/>
      <child link="${ns}p3dx_${suffix}_wheel"/>
    </joint>

    <!-- The transmission tag is used only by ros_control -->
    <!--<transmission type="pr2_mechanism_model/SimpleTransmission" name="${parent}_${suffix}_wheel_trans">
        <actuator name="base_${suffix}_wheel_motor" />
        <joint name="base_${suffix}_wheel_joint" />
        <mechanicalReduction>${reflect * 624/35 * 80/19}</mechanicalReduction>
        </transmission>-->
  </xacro:macro>

</robot>

